use App\Services\Gateway\BitPayX;

class Payment
{
    public static function getClient(){
        $method = Config::get("payment_system");
        switch($method){
            case ('bitpayx'):
                return new BitPayX(Config::get('bitpay_secret'));
            default:
                return 0;
        }
    }
}